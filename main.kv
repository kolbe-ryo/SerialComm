# Popup class
###########################################################
<FinishPopup>:
    id:pop
    auto_dismiss: True
    size_hint: 0.5, 0.5
    title: '<Confirmation>'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'End All!'


<CausionPopup>:
    id:pop
    auto_dismiss: False
    size_hint: 0.5, 0.5
    title: '<Causion>'
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: causion
                text: ''
